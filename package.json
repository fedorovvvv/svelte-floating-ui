{
	"name": "svelte-floating-ui",
	"description": "Svelte actions for working with floating ui",
	"version": "1.6.0",
	"license": "MIT",
	"type": "module",
	"main": "./index.js",
	"types": "./index.d.ts",
	"svelte": "./index.js",
	"repository": "https://github.com/fedorovvvv/svelte-floating-ui",
	"author": "Nikita Fedorov <nikitafedorov7@yandex.ru>",
	"keywords": [
		"svelte",
		"light",
		"floating",
		"floating-ui",
		"sveltejs",
		"svelte-floating-ui",
		"svelte-floating",
		"svelte-v3",
		"svelte3"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@typescript-eslint/eslint-plugin": "^8.28.0",
		"@typescript-eslint/parser": "^8.28.0",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.25.3",
		"svelte-check": "^4.1.5",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.3"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.13"
	},
	"exports": {
		"./dom": {
			"types": "./dom/index.d.ts",
			"svelte": "./dom/index.js",
			"default": "./dom/index.js"
		},
		".": {
			"types": "./index.d.ts",
			"default": "./index.js"
		}
	},
	"typesVersions": {
		">4.0": {
			"svelte-floating-ui": [
				"./index.d.ts"
			]
		}
	}
}
